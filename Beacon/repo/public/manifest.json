{
  "manifest_version": 3,
  "name": "Beacon",
  "version": "1.0.0",
  "description": "Beacon Chrome Extension",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
