{
  "manifest_version": 3,
  "name": "Simple Sensitive Field Detector",
  "version": "1.0.0",
  "description": "Simple step-by-step sensitive field detection",
  
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background-simple.js"
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content-step1.js"],
    "run_at": "document_start",
    "all_frames": true
  }],
  
  "action": {
    "default_popup": "popup-simple.html"
  }
}
