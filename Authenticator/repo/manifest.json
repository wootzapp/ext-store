{
  "manifest_version": 3,
  "name": "SAML Authenticator & Zero-Trust Access",
  "version": "1.1.0",
  "description": "Handles Okta SAML authentication, detects sensitive content using AI, and provides zero-trust access to internal applications",
  "icons": {
    "16": "Okta.png",
    "32": "Okta.png",
    "48": "Okta.png",
    "128": "Okta.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "cookies"
  ],
  "host_permissions": [
    "https://integrator-2373294.okta.com/*",
    "https://*.okta.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://test.aashish.icu/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "Okta.png",
      "32": "Okta.png",
      "48": "Okta.png",
      "128": "Okta.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "auth-success.html",
        "auth-success.js",
        "popup.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
        }
  ]
}